<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBox
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/checkboxTwo"
        android:layout_width="wrap_content"
        android:layout_height="70dp">
    </CheckBox>
    <CheckBox
        android:layout_alignParentLeft="true"
        android:id="@+id/checkboxOne"
        android:layout_above="@+id/checkboxTwo"
        android:layout_width="wrap_content"
        android:layout_height="70dp">
    </CheckBox>
    <CheckBox
        android:id="@+id/checkboxThree"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/checkboxTwo">
    </CheckBox>
    <SeekBar
        android:max="100"
        android:thumb="@drawable/hinhxanh"
        android:layout_toRightOf="@+id/checkboxOne"
        android:layout_centerVertical="true"
        android:id="@+id/seekbarTwo"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </SeekBar>
    <SeekBar
        android:max="100"
        android:id="@+id/seekbarOne"
        android:thumb="@drawable/hinhdo"
        android:layout_above="@+id/seekbarTwo"
        android:layout_toRightOf="@+id/checkboxOne"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </SeekBar>
    <SeekBar
        android:max="100"
        android:id="@+id/seekbarThree"
        android:thumb="@drawable/hinhvang"
        android:layout_below="@+id/seekbarTwo"
        android:layout_toRightOf="@+id/checkboxThree"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </SeekBar>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/play"></ImageButton>

    <TextView
        android:id="@+id/lblTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100dp"
        android:text="Racing"
        android:layout_centerHorizontal="true"
        android:textColor="#E91E63">
    </TextView>
    <TextView
        android:id="@+id/lblDiemSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="75dp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblTieuDe">
    </TextView>


</RelativeLayout>