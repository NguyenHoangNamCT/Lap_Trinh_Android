<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/lblChuoiDauVao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="50sp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#414C55"
            android:layout_margin="6dp">
        </TextView>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Delete"
            android:textSize="20sp">
        </Button>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:weightSum="40"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:gravity="center">

            <Button
                android:id="@+id/btnSo1"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="1"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so1_click">
            </Button>
            <Button
                android:id="@+id/btnSo2"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="2"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so2_click">
            </Button>
            <Button
                android:id="@+id/btnSo3"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="3"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so3_click">
            </Button>
            <Button
                android:id="@+id/btnChia"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="/"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="chia_click">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:gravity="center">

            <Button
                android:id="@+id/btnSo4"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="4"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so4_click">
            </Button>
            <Button
                android:id="@+id/btnSo5"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="5"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so5_click">
            </Button>
            <Button
                android:id="@+id/btnSo6"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="6"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so6_click">
            </Button>
            <Button
                android:id="@+id/btnNhan"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="X"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="nhan_click">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:gravity="center">

            <Button
                android:id="@+id/btnSo7"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="7"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so7_click">
            </Button>
            <Button
                android:id="@+id/btnSo8"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="8"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so8_click">
            </Button>
            <Button
                android:id="@+id/btnSo9"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="9"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so9_click">
            </Button>
            <Button
                android:id="@+id/btnTru"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="-"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="tru_click">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:gravity="center">

            <Button
                android:id="@+id/btnCham"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="."
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="cham_click">
            </Button>
            <Button
                android:id="@+id/btnSo0"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="0"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="so0_click">
            </Button>
            <Button
                android:id="@+id/btnBang"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="="
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="bang_click">
            </Button>
            <Button
                android:id="@+id/btnCong"
                android:layout_width="0dp"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="+"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:onClick="cong_click">
            </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>